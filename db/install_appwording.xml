<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/ejsapp/db" VERSION="20120606" COMMENT="XMLDB file for Moodle mod/ejsapp"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="ejsapp" COMMENT="Defines the Easy Java Simulations Applications instances in Moodle" NEXT="ejsapp_remlab_conf">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" NEXT="course"/>
        <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" COMMENT="Course ejsapp activity belongs to" PREVIOUS="id" NEXT="name"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="name field for moodle instances" PREVIOUS="course" NEXT="intro"/>
        <FIELD NAME="intro" TYPE="text" LENGTH="medium" NOTNULL="false" SEQUENCE="false" COMMENT="General introduction of the ejsapp activity" PREVIOUS="name" NEXT="introformat"/>
        <FIELD NAME="introformat" TYPE="int" LENGTH="4" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" COMMENT="Format of the intro field (MOODLE, HTML, MARKDOWN...)" PREVIOUS="intro" NEXT="appwording"/>
        <FIELD NAME="appwording" TYPE="text" LENGTH="medium" NOTNULL="true" SEQUENCE="false" COMMENT="Wording associated to the EJS applet" PREVIOUS="introformat" NEXT="appwordingformat"/>
        <FIELD NAME="appwordingformat" TYPE="int" LENGTH="4" NOTNULL="true" UNSIGNED="true" DEFAULT="1" SEQUENCE="false" COMMENT="Format of the appwording field (MOODLE, HTML, MARKDOWN...)" PREVIOUS="appwording" NEXT="timecreated"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" PREVIOUS="appwordingformat" NEXT="timemodified"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="timecreated" NEXT="applet_name"/>
        <FIELD NAME="applet_name" TYPE="text" LENGTH="medium" NOTNULL="false" SEQUENCE="false" COMMENT="Name of the applet that implements the Lab (e.g., heatflowMoodle)" PREVIOUS="timemodified" NEXT="class_file"/>
        <FIELD NAME="class_file" TYPE="text" LENGTH="medium" NOTNULL="false" SEQUENCE="false" COMMENT="applet main class file (e.g., heatflow.heatflowMoodle.heatflowMoodleApplet.class)" PREVIOUS="applet_name" NEXT="codebase"/>
        <FIELD NAME="codebase" TYPE="text" LENGTH="medium" NOTNULL="false" SEQUENCE="false" COMMENT="Path of the .jar that embeds the applet (e.g., /remote_laboratories_applets/gyroscopeMoodle/)" PREVIOUS="class_file" NEXT="mainframe"/>
        <FIELD NAME="mainframe" TYPE="text" LENGTH="medium" NOTNULL="false" SEQUENCE="false" COMMENT="Name of the EJS mainframe (by default MainFrame)" PREVIOUS="codebase" NEXT="is_collaborative"/>
        <FIELD NAME="is_collaborative" TYPE="int" LENGTH="1" NOTNULL="true" UNSIGNED="false" DEFAULT="1" SEQUENCE="false" COMMENT="Does the lab supports collaborative sessions? (1=yes, 0=not)" PREVIOUS="mainframe" NEXT="preserve_applet_size"/>
        <FIELD NAME="preserve_applet_size" TYPE="int" LENGTH="1" NOTNULL="true" SEQUENCE="false" PREVIOUS="is_collaborative" NEXT="is_rem_lab"/>
        <FIELD NAME="is_rem_lab" TYPE="int" LENGTH="1" NOTNULL="true" SEQUENCE="false" PREVIOUS="preserve_applet_size" NEXT="height"/>
        <FIELD NAME="height" TYPE="int" LENGTH="10" NOTNULL="false" UNSIGNED="true" SEQUENCE="false" PREVIOUS="is_rem_lab" NEXT="width"/>
        <FIELD NAME="width" TYPE="int" LENGTH="10" NOTNULL="false" UNSIGNED="true" SEQUENCE="false" PREVIOUS="height"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="course" UNIQUE="false" FIELDS="course"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="ejsapp_remlab_conf" COMMENT="Contains all the configuration parameters a remote EJSApp needs" PREVIOUS="ejsapp">
      <FIELDS>
      	<FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" NEXT="ejsappid"/>
      	<FIELD NAME="ejsappid" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" COMMENT="The EJSApp id" PREVIOUS="id" NEXT="ip"/>
        <FIELD NAME="ip" TYPE="char" LENGTH="255" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" COMMENT="IP direction of the computer that controls the remote equipment" PREVIOUS="ejsappid" NEXT="port"/>
        <FIELD NAME="port" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" PREVIOUS="ip" NEXT="totalslots"/>
        <FIELD NAME="totalslots" TYPE="int" LENGTH="5" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="port" NEXT="weeklyslots"/>
        <FIELD NAME="weeklyslots" TYPE="int" LENGTH="3" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="totalslots" NEXT="dailyslots"/>
        <FIELD NAME="dailyslots" TYPE="int" LENGTH="2" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="weeklyslots"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="ejsappid" UNIQUE="false" FIELDS="ejsappid"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB> 